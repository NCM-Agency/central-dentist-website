---
// ServiceCard.astro - Service-specific card with image, title, description, and CTA
import Card from './Card.astro';
import Button from './Button.astro';

export interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  href: string;
  features?: string[];
  highlight?: boolean;
  class?: string;
}

const { 
  title,
  description,
  image,
  imageAlt = title,
  href,
  features = [],
  highlight = false,
  class: className = ''
} = Astro.props;

const cardVariant = highlight ? 'service' : 'hover';
---

<div 
  class={`card-service-enhanced h-full flex flex-col ${highlight ? 'ring-2 ring-teal ring-opacity-20' : ''} ${className}`}
>
  <!-- Service Image -->
  {image && (
    <div class="aspect-video w-full mb-4 overflow-hidden rounded-lg">
      <img 
        src={image}
        alt={imageAlt}
        class="w-full h-full object-cover transition-transform duration-300 hover:scale-110"
        loading="lazy"
        width="600"
        height="400"
      />
    </div>
  )}

  <!-- Content Section -->
  <div class="flex-1 flex flex-col">
    
    <!-- Title -->
    <h3 class="font-heading text-h4 font-semibold text-gray-dark mb-3 leading-tight">
      {title}
    </h3>

    <!-- Description -->
    <p class="font-body text-gray-medium mb-4 leading-relaxed flex-1">
      {description}
    </p>

    <!-- Features List -->
    {features.length > 0 && (
      <ul class="space-y-2 mb-6">
        {features.map((feature) => (
          <li class="flex items-start space-x-2">
            <svg 
              class="w-4 h-4 text-teal mt-0.5 flex-shrink-0" 
              fill="currentColor" 
              viewBox="0 0 20 20"
            >
              <path 
                fill-rule="evenodd" 
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" 
                clip-rule="evenodd"
              />
            </svg>
            <span class="font-body text-sm text-gray-dark">{feature}</span>
          </li>
        ))}
      </ul>
    )}

    <!-- CTA Button -->
    <div class="mt-auto pt-4">
      <Button 
        variant={highlight ? 'primary' : 'secondary'} 
        size="md" 
        href={href}
        fullWidth
      >
        Learn More
      </Button>
    </div>
  </div>

  <!-- Highlight Badge -->
  {highlight && (
    <div class="absolute -top-2 -right-2">
      <div class="bg-gradient-to-r from-lime to-lime-light text-white text-xs font-heading font-semibold px-3 py-1 rounded-full shadow-lg">
        Popular
      </div>
    </div>
  )}
</div>

<style>
  /* Add relative positioning to parent card for absolute badge positioning */
  :global(.service-card) {
    position: relative;
  }
</style>