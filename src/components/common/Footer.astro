---
// Footer.astro - Site footer with contact info, hours, and links
import siteSettings from '../../content/site-settings.json';
import footerData from '../../content/footer.json';

const { business, hours, certifications } = siteSettings;
const { description, copyright, secondaryText, quickLinks, legalLinks } = footerData;
---

<footer class="text-white section-padding" style="background-color: #2d3748;" data-gjs-type="footer">
  <div class="container mx-auto container-padding">

    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">

      <!-- Practice Info -->
      <div class="lg:col-span-1">
        <div class="mb-6">
          <img
            src="/images/LOGO-01.png"
            alt={business.name}
            class="h-10 w-auto mb-4 filter brightness-0 invert"
          />
          <p class="font-body text-gray-light text-sm leading-relaxed">
            {description}
          </p>
        </div>

        <!-- Certifications -->
        <div class="flex flex-col space-y-2">
          {certifications.map((cert) => (
            <div class="flex items-center space-x-2 text-sm text-gray-light">
              <svg class="w-4 h-4 text-lime-light" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>{cert.name}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Contact Information -->
      <div>
        <h3 class="font-heading font-semibold text-lg mb-4">Contact Us</h3>
        <div class="space-y-3">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-teal mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div class="font-body text-sm text-gray-light">
              <p>{business.address.street}</p>
              <p>{business.address.city}, {business.address.state} {business.address.zip}</p>
            </div>
          </div>

          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-teal flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href={`tel:${business.phone}`} class="font-body text-sm text-gray-light hover:text-teal transition-colors">
              {business.phone}
            </a>
          </div>

          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-teal flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${business.email}`} class="font-body text-sm text-gray-light hover:text-teal transition-colors">
              {business.email}
            </a>
          </div>
        </div>
      </div>

      <!-- Office Hours -->
      <div>
        <h3 class="font-heading font-semibold text-lg mb-4">Office Hours</h3>
        <div class="space-y-2 font-body text-sm text-gray-light">
          <div class="flex justify-between">
            <span>Monday:</span>
            <span>{hours.monday}</span>
          </div>
          <div class="flex justify-between">
            <span>Tuesday:</span>
            <span>{hours.tuesday}</span>
          </div>
          <div class="flex justify-between">
            <span>Wednesday:</span>
            <span>{hours.wednesday}</span>
          </div>
          <div class="flex justify-between">
            <span>Thursday:</span>
            <span>{hours.thursday}</span>
          </div>
          <div class="flex justify-between">
            <span>Friday:</span>
            <span>{hours.friday}</span>
          </div>
          <div class="flex justify-between text-gray-medium">
            <span>Weekend:</span>
            <span>{hours.weekend}</span>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-heading font-semibold text-lg mb-4">Quick Links</h3>
        <nav class="space-y-2">
          {quickLinks.map((link) => (
            <a href={link.url} class="block font-body text-sm text-gray-light hover:text-teal transition-colors">
              {link.label}
            </a>
          ))}
        </nav>
      </div>
    </div>


    <!-- Bottom Footer -->
    <div class="border-t border-gray-medium/30 pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="font-body text-sm text-gray-medium">
          {copyright}
        </div>

        <div class="flex space-x-6 font-body text-sm text-gray-medium">
          {legalLinks.map((link) => (
            <a href={link.url} class="hover:text-teal transition-colors">{link.label}</a>
          ))}
        </div>

        <div class="font-body text-sm text-gray-medium">
          {secondaryText}
        </div>
      </div>
    </div>
  </div>
</footer>
