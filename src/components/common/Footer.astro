<footer class="text-white section-padding" style="background-color: #2d3748;" data-gjs-type="footer">
  <div class="container mx-auto container-padding">
    
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      
      <!-- Practice Info -->
      <div class="lg:col-span-1">
        <div class="mb-6">
          <img 
            src="/images/LOGO-01.png" 
            alt="Central Dentist" 
