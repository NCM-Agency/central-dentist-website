---
// Navigation.astro - Mobile-responsive navigation with dropdown support
export interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navigation = [
  {
    title: 'Home',
    href: '/',
    type: 'page'
  },
  {
    title: 'About Us',
    href: '/about',
    type: 'dropdown',
    items: [
      { title: 'Our Office', href: '/about' },
      { title: 'Reviews & Testimonials', href: '/reviews-testimonials' },
      { title: 'Our History', href: '/our-history' },
      { title: 'Dr. Jill Ombrello', href: '/team/dr-jill-ombrello' },
      { title: 'Dr. Elizabeth Alejandrez', href: '/team/dr-elizabeth-alejandrez' },
      { title: 'Dr. Sahil Sawnani', href: '/team/dr-sahil-sawnani' }
    ]
  },
  {
    title: 'Our Philosophy',
    href: '/philosophy',
    type: 'dropdown',
    items: [
      { title: 'Mercury-Free Practice', href: '/services/mercury-free' },
      { title: 'Sleep & Breathing', href: '/services/sleep-breathing' },
      { title: 'Holistic Approach', href: '/about#philosophy' },
      { title: 'Biocompatible Materials', href: '/services/ceramic-implants' }
    ]
  },
  {
    title: 'Services',
    href: '/services',
    type: 'dropdown',
    items: [
      { title: 'Ceramic Implants + PRF', href: '/services/ceramic-implants' },
      { title: 'Sleep Disordered Breathing', href: '/services/sleep-breathing' },
      { title: 'Pediatric Healthy Startâ„¢', href: '/services/pediatric-healthy-start' },
      { title: 'InvisalignÂ®', href: '/services/invisalign' },
      { title: 'CBCT 3D Imaging', href: '/services/cbct' },
      { title: 'Ozone Therapy', href: '/services/ozone-therapy' },
      { title: 'Fluoride-Free Bonding', href: '/services/bonding' }
    ]
  },
  {
    title: 'Contact',
    href: '/contact',
    type: 'page'
  },
  {
    title: 'More',
    href: '#',
    type: 'dropdown',
    items: [
      { title: 'Blog', href: '/blog' },
      { title: 'ADHD & Sleep Connection', href: '/services/sleep-breathing#adhd' },
      { title: 'Patient Forms', href: '/about#forms' },
      { title: 'Recommended Products', href: '/recommended-products' }
    ]
  }
];
---

<nav class="bg-white shadow-sm sticky top-0 z-50" data-gjs-type="navbar" data-gjs-locked="true">
  <div class="container mx-auto container-padding">
    <div class="flex items-center justify-between h-16 md:h-20">
      
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2">
          <img 
            src="/images/LOGO-01.png" 
            alt="Central Dentist - Holistic Family Dentistry" 
            class="h-8 md:h-10 w-auto"
            loading="eager"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-1">
          {navigation.map((item) => (
            <div class="relative group">
              {item.type === 'page' ? (
                <a 
                  href={item.href}
                  class={`px-4 py-2 text-sm font-heading font-normal transition-colors duration-200 rounded-md
                    ${currentPath === item.href 
                      ? 'text-teal bg-teal/10' 
                      : 'text-gray-dark hover:text-teal hover:bg-teal/5'
                    }`}
                >
                  {item.title}
                </a>
              ) : (
                <button 
                  class={`px-4 py-2 text-sm font-heading font-normal transition-colors duration-200 rounded-md flex items-center space-x-1
                    ${currentPath.startsWith(item.href) && item.href !== '#'
                      ? 'text-teal bg-teal/10' 
                      : 'text-gray-dark hover:text-teal hover:bg-teal/5'
                    }`}
                >
                  <span>{item.title}</span>
                  <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
              )}
              
              <!-- Desktop Dropdown -->
              {item.type === 'dropdown' && item.items && (
                <div class="absolute left-0 mt-2 w-64 bg-white rounded-lg shadow-teal-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform translate-y-2 group-hover:translate-y-0 backdrop-blur-sm border border-gray-100">
                  <div class="py-2">
                    {item.items.map((subItem) => (
                      <a 
                        href={subItem.href}
                        class={`block px-4 py-2 text-sm font-body transition-all duration-300 rounded-md mx-2
                          ${currentPath === subItem.href 
                            ? 'text-teal bg-teal/10 transform translate-x-1' 
                            : 'text-gray-dark hover:text-teal hover:bg-teal/5 hover:transform hover:translate-x-1'
                          }`}
                      >
                        {subItem.title}
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>

      <!-- Contact Info -->
      <div class="hidden lg:flex items-center space-x-4">
        <a 
          href="tel:214-368-0900" 
          class="text-teal-dark font-body font-semibold hover:text-teal transition-colors"
        >
          214-368-0900
        </a>
        <a 
          href="/contact" 
          class="text-sm px-6 py-2 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-medium hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg hover:scale-105 transition-all duration-300"
          style="font-family: 'Playfair Display', 'Times', serif;"
        >
          Schedule Visit
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-dark hover:text-teal hover:bg-gray-light focus:outline-none focus:ring-2 focus:ring-teal focus:ring-offset-2"
          aria-controls="mobile-menu" 
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <!-- Menu icon -->
          <svg class="menu-icon block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!-- Close icon -->
          <svg class="close-icon hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="mobile-menu hidden md:hidden transition-all duration-300 ease-in-out transform -translate-y-4 opacity-0" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-light backdrop-blur-sm">
        
        <!-- Phone number prominently displayed on mobile -->
        <div class="px-3 py-2 border-b border-gray-light mb-2">
          <a 
            href="tel:214-368-0900" 
            class="text-lg font-body font-semibold text-teal-dark hover:text-teal transition-colors"
          >
            ðŸ“ž 214-368-0900
          </a>
        </div>

        {navigation.map((item) => (
          <div class="mobile-nav-item">
            {item.type === 'page' ? (
              <a 
                href={item.href}
                class={`block px-3 py-2 text-base font-body font-medium rounded-md transition-colors
                  ${currentPath === item.href 
                    ? 'text-teal bg-teal/10' 
                    : 'text-gray-dark hover:text-teal hover:bg-gray-light'
                  }`}
              >
                {item.title}
              </a>
            ) : (
              <div>
                <button 
                  class={`mobile-dropdown-toggle w-full flex items-center justify-between px-3 py-2 text-base font-body font-medium rounded-md transition-colors
                    ${currentPath.startsWith(item.href) && item.href !== '#'
                      ? 'text-teal bg-teal/10' 
                      : 'text-gray-dark hover:text-teal hover:bg-gray-light'
                    }`}
                >
                  <span>{item.title}</span>
                  <svg class="dropdown-arrow w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                
                {item.items && (
                  <div class="mobile-dropdown-menu hidden pl-4 mt-1 space-y-1">
                    {item.items.map((subItem) => (
                      <a 
                        href={subItem.href}
                        class={`block px-3 py-2 text-sm font-body rounded-md transition-colors
                          ${currentPath === subItem.href 
                            ? 'text-teal bg-teal/10' 
                            : 'text-gray-medium hover:text-teal hover:bg-gray-light'
                          }`}
                      >
                        {subItem.title}
                      </a>
                    ))}
                  </div>
                )}
              </div>
            )}
          </div>
        ))}

        <!-- Mobile CTA -->
        <div class="px-3 pt-4">
          <a 
            href="/contact" 
            class="w-full text-center block py-3 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-medium hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg transition-all duration-300"
            style="font-family: 'Playfair Display', 'Times', serif;"
          >
            Schedule Your Visit
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    const menuIcon = document.querySelector('.menu-icon');
    const closeIcon = document.querySelector('.close-icon');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        const isOpen = !mobileMenu.classList.contains('hidden');
        
        if (isOpen) {
          // Close menu with animation
          mobileMenu.style.transform = 'translateY(-1rem)';
          mobileMenu.style.opacity = '0';
          setTimeout(() => {
            mobileMenu.classList.add('hidden');
          }, 300);
          menuIcon?.classList.remove('hidden');
          closeIcon?.classList.add('hidden');
          mobileMenuButton.setAttribute('aria-expanded', 'false');
        } else {
          // Open menu with animation
          mobileMenu.classList.remove('hidden');
          requestAnimationFrame(() => {
            mobileMenu.style.transform = 'translateY(0)';
            mobileMenu.style.opacity = '1';
          });
          menuIcon?.classList.add('hidden');
          closeIcon?.classList.remove('hidden');
          mobileMenuButton.setAttribute('aria-expanded', 'true');
        }
      });
    }

    // Mobile dropdown functionality
    const dropdownToggles = document.querySelectorAll('.mobile-dropdown-toggle');
    dropdownToggles.forEach(toggle => {
      toggle.addEventListener('click', function() {
        const dropdownMenu = this.nextElementSibling;
        const arrow = this.querySelector('.dropdown-arrow');
        
        if (dropdownMenu?.classList.contains('hidden')) {
          dropdownMenu.classList.remove('hidden');
          arrow?.classList.add('rotate-180');
        } else {
          dropdownMenu?.classList.add('hidden');
          arrow?.classList.remove('rotate-180');
        }
      });
    });

    // Close mobile menu when clicking on links
    const mobileLinks = document.querySelectorAll('#mobile-menu a[href]:not([href="#"])');
    mobileLinks.forEach(link => {
      link.addEventListener('click', function() {
        mobileMenu?.classList.add('hidden');
        menuIcon?.classList.remove('hidden');
        closeIcon?.classList.add('hidden');
        mobileMenuButton?.setAttribute('aria-expanded', 'false');
      });
    });
  });
</script>