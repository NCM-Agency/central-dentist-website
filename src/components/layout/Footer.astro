---
// Footer.astro - Site-wide footer with navigation and contact info
const currentYear = new Date().getFullYear();

// Navigation Links
const services = [
  { title: 'Ceramic Implants + PRF', href: '/services/ceramic-implants' },
  { title: 'Sleep Disordered Breathing', href: '/services/sleep-breathing' },
  { title: 'Pediatric Healthy Startâ„¢', href: '/services/pediatric-healthy-start' },
  { title: 'Invisalign', href: '/services/invisalign' },
  { title: 'TMJ Treatment', href: '/services/tmj' }
];

const about = [
  { title: 'Our Practice', href: '/about' },
  { title: 'Meet the Team', href: '/team' },
  { title: 'Our Philosophy', href: '/philosophy' },
  { title: 'Advanced Diagnostics', href: '/advanced-diagnostics' }
];

const resources = [
  { title: 'Blog', href: '/blog' },
  { title: 'Patient Forms', href: '/forms' },
  { title: 'Insurance & Financing', href: '/insurance' },
  { title: 'Reviews & Testimonials', href: '/testimonials' }
];
---

<footer class="bg-gradient-to-b from-gray-50 to-white border-t border-gray-200">
  <!-- Main Footer Content -->
  <div class="container mx-auto px-4 py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 lg:gap-12">
      
      <!-- Brand & Contact Column -->
      <div class="lg:col-span-2">
        <div class="mb-6">
          <h3 class="text-footer-header text-teal-dark mb-2">Central Dentist</h3>
          <p class="text-body-small text-gray-medium">
            Holistic Family Dentistry in Dallas
          </p>
        </div>
        
        <!-- Contact Info -->
        <div class="space-y-4">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-teal mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <div>
              <p class="text-footer-link text-gray-dark font-medium">7920 Belt Line Rd #115</p>
              <p class="text-footer-link text-gray-medium">Dallas, TX 75254</p>
            </div>
          </div>
          
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-teal flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a href="tel:214-368-0900" class="text-footer-link text-teal hover:text-teal-dark transition-colors font-medium">
              (214) 368-0900
            </a>
          </div>
          
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-teal flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href="/contact" class="text-footer-link text-teal hover:text-teal-dark transition-colors">
              Contact Us Online
            </a>
          </div>
        </div>
        
        <!-- Office Hours -->
        <div class="mt-6 p-4 bg-teal-50 rounded-lg">
          <h4 class="text-footer-header text-teal-dark mb-2">Office Hours</h4>
          <div class="text-footer-link text-gray-dark space-y-1">
            <p>Monday - Thursday: 8:00 AM - 5:00 PM</p>
            <p>Friday: By Appointment</p>
            <p>Saturday - Sunday: Closed</p>
          </div>
        </div>
      </div>
      
      <!-- Services Column -->
      <div>
        <h4 class="text-footer-header text-gray-dark mb-4">Services</h4>
        <ul class="space-y-2">
          {services.map((link) => (
            <li>
              <a href={link.href} class="text-footer-link text-gray-medium hover:text-teal transition-colors">
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- About Column -->
      <div>
        <h4 class="text-footer-header text-gray-dark mb-4">About</h4>
        <ul class="space-y-2">
          {about.map((link) => (
            <li>
              <a href={link.href} class="text-footer-link text-gray-medium hover:text-teal transition-colors">
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Resources Column -->
      <div>
        <h4 class="text-footer-header text-gray-dark mb-4">Resources</h4>
        <ul class="space-y-2">
          {resources.map((link) => (
            <li>
              <a href={link.href} class="text-footer-link text-gray-medium hover:text-teal transition-colors">
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Social Links & Certifications -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        
        <!-- Social Links -->
        <div class="flex space-x-4">
          <a href="#" class="w-10 h-10 bg-gray-100 hover:bg-teal hover:text-white text-gray-600 rounded-full flex items-center justify-center transition-all">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
            </svg>
          </a>
          <a href="#" class="w-10 h-10 bg-gray-100 hover:bg-teal hover:text-white text-gray-600 rounded-full flex items-center justify-center transition-all">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
            </svg>
          </a>
        </div>
        
        <!-- Certifications -->
        <div class="flex items-center space-x-6">
          <div class="text-xs text-gray-medium">
            <p>IAOMT Certified</p>
          </div>
          <div class="text-xs text-gray-medium">
            <p>Mercury-Free Practice</p>
          </div>
          <div class="text-xs text-gray-medium">
            <p>Biocompatible Dentistry</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="bg-teal-dark text-white py-4">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center text-sm">
        <p>&copy; {currentYear} Central Dentist. All rights reserved.</p>
        <div class="flex space-x-4 mt-2 md:mt-0">
          <a href="/privacy" class="hover:text-lime-light transition-colors">Privacy Policy</a>
          <a href="/terms" class="hover:text-lime-light transition-colors">Terms of Service</a>
          <a href="/sitemap" class="hover:text-lime-light transition-colors">Sitemap</a>
        </div>
      </div>
    </div>
  </div>
</footer>