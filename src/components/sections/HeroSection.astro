---
// HeroSection.astro - Homepage hero section with exact structure from original site
import Button from '../ui/Button.astro';

export interface Props {
  mainTitle: string;
  tagline1?: string;
  tagline2?: string;
  boldSubhead?: string;
  description?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
  backgroundImage?: string;
  backgroundVideo?: string;
  class?: string;
}

const { 
  mainTitle,
  tagline1,
  tagline2,
  boldSubhead,
  description,
  primaryCTA,
  secondaryCTA,
  backgroundImage,
  backgroundVideo,
  class: className = ''
} = Astro.props;
---

<section 
  class={`relative min-h-screen flex items-center justify-center overflow-hidden ${className}`}
  data-gjs-type="hero"
>
  <!-- Background -->
  <div class="absolute inset-0 z-0">
    {backgroundVideo ? (
      <video 
        autoplay 
        muted 
        loop 
        playsInline 
        class="w-full h-full object-cover"
      >
        <source src={backgroundVideo} type="video/mp4" />
      </video>
    ) : backgroundImage ? (
      <img 
        src={backgroundImage}
        alt="Modern Holistic Dental Office Interior"
        class="w-full h-full object-cover"
        loading="eager"
        width="1920"
        height="1080"
      />
    ) : (
      <!-- Gradient Background -->
      <div class="w-full h-full bg-gradient-to-br from-teal-dark via-teal to-olive"></div>
    )}
    
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/40"></div>
    
    <!-- Animated Dot Pattern Background -->
    <div class="absolute inset-0 dot-pattern opacity-30"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 w-full">
    <div class="container mx-auto container-padding">
      <div class="max-w-4xl mx-auto text-center">
        
        <!-- Main Title - "Holistic Family Dentistry" (LARGEST) -->
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-normal mb-8 leading-tight text-white" style="font-family: 'Playfair Display', serif;">
          <span data-gjs-editable="true">
            {mainTitle}
          </span>
        </h1>
        
        <!-- Tagline 1 - "Preventive & Biocompatible..." (MEDIUM) -->
        {tagline1 && (
          <h2 class="text-xl md:text-2xl lg:text-3xl font-normal mb-4 leading-relaxed text-white" style="font-family: 'Playfair Display', serif;">
            <span data-gjs-editable="true">{tagline1}</span>
          </h2>
        )}
        
        <!-- Tagline 2 - "Addressing the Root Causes..." (MEDIUM) -->
        {tagline2 && (
          <h3 class="text-xl md:text-2xl lg:text-3xl font-normal mb-8 leading-relaxed text-white" style="font-family: 'Playfair Display', serif;">
            <span data-gjs-editable="true">{tagline2}</span>
          </h3>
        )}
        
        <!-- Bold Subhead - "Radical Generosity" (BOLD) -->
        {boldSubhead && (
          <h4 class="text-2xl md:text-3xl lg:text-4xl font-semibold mb-4 text-white" style="font-family: 'Playfair Display', serif;">
            <span data-gjs-editable="true">{boldSubhead}</span>
          </h4>
        )}
        
        <!-- Description - Long text (NORMAL) -->
        {description && (
          <p class="font-body text-lg md:text-xl text-white/90 mb-8 max-w-3xl mx-auto leading-relaxed">
            <span data-gjs-editable="true">{description}</span>
          </p>
        )}
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-8">
          {primaryCTA && (
            <Button 
              variant="accent" 
              size="lg" 
              href={primaryCTA.href}
              class="min-w-[200px] transform transition-all hover:scale-105 hover:-translate-y-1 shadow-2xl"
            >
              {primaryCTA.text}
            </Button>
          )}
          
          {secondaryCTA && (
            <Button 
              variant="secondary" 
              size="lg" 
              href={secondaryCTA.href}
              class="min-w-[200px] bg-white/10 backdrop-blur-sm border-white/20 text-white hover:bg-white hover:text-teal-dark transform transition-all hover:scale-105 hover:-translate-y-1"
            >
              {secondaryCTA.text}
            </Button>
          )}
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
    <div class="animate-bounce">
      <svg class="w-6 h-6 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>