---
// Button.astro - Reusable button component with different variants
export interface Props {
  variant?: 'primary' | 'secondary' | 'accent';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  fullWidth?: boolean;
  class?: string;
}

const { 
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  disabled = false,
  fullWidth = false,
  class: className = ''
} = Astro.props;

// Base button classes
const baseClasses = 'inline-flex items-center justify-center font-heading font-medium transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed';

// Variant classes
const variantClasses = {
  primary: 'btn-primary',
  secondary: 'btn-secondary', 
  accent: 'btn-accent'
};

// Size classes
const sizeClasses = {
  sm: 'px-4 py-2 text-sm rounded-full',
  md: 'px-8 py-3 text-base rounded-full',
  lg: 'px-10 py-4 text-lg rounded-full'
};

// Width classes
const widthClasses = fullWidth ? 'w-full' : '';

// Combine all classes
const buttonClasses = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${widthClasses} ${className}`.trim();

// Component to render
const Component = href ? 'a' : 'button';
const componentProps = href ? { href } : { type, disabled };
---

<Component 
  class={buttonClasses}
  {...componentProps}
  data-gjs-type="button"
>
  <slot />
</Component>