---
// ServiceCard.astro - Service-specific card with image, title, description, and CTA
import Card from './Card.astro';
import Button from './Button.astro';

export interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  href: string;
  features?: string[];
  highlight?: boolean;
  class?: string;
}

const { 
  title,
  description,
  image,
  imageAlt = title,
  href,
  features = [],
  highlight = false,
  class: className = ''
} = Astro.props;

const cardVariant = highlight ? 'service' : 'hover';
---

<div 
  class={`card-service-enhanced h-full flex flex-col ${className}`}
>
  <!-- Service Image -->
  {image && (
    <div class="aspect-video w-full mb-4 overflow-hidden rounded-lg">
      <img 
        src={image}
        alt={imageAlt}
        class="w-full h-full object-cover transition-transform duration-300 hover:scale-110"
        loading="lazy"
        width="600"
        height="400"
      />
    </div>
  )}

  <!-- Content Section -->
  <div class="flex-1 flex flex-col">
    
    <!-- Title -->
    <h3 class="text-card-header mb-3">
      {title}
    </h3>

    <!-- Description -->
    <p class="text-body-regular text-gray-medium mb-4 flex-1">
      {description}
    </p>

    <!-- Features List -->
    {features.length > 0 && (
      <ul class="space-y-2 mb-6">
        {features.map((feature) => (
          <li class="flex items-start space-x-2">
            <svg 
              class="w-4 h-4 text-teal mt-0.5 flex-shrink-0" 
              fill="currentColor" 
              viewBox="0 0 20 20"
            >
              <path 
                fill-rule="evenodd" 
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" 
                clip-rule="evenodd"
              />
            </svg>
            <span class="font-body text-sm text-gray-dark">{feature}</span>
          </li>
        ))}
      </ul>
    )}

    <!-- CTA Button -->
    <div class="mt-auto pt-4">
      <a 
        href={href}
        class="block w-full text-center px-6 py-3 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-semibold text-sm hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg hover:scale-105 transition-all duration-300"
      >
        Learn More
      </a>
    </div>
  </div>

</div>

<style>
  /* Add relative positioning to parent card for absolute badge positioning */
  :global(.service-card) {
    position: relative;
  }
</style>