---
import Layout from './Layout.astro';
import BlurFade from '../components/ui/BlurFade.astro';
import Card from '../components/ui/Card.astro';

interface Props {
  title: string;
  author: string;
  publishDate: Date;
  updatedDate?: Date;
  readTime: string;
  categories: string[];
  featuredImage?: string;
}

const { title, author, publishDate, updatedDate, readTime, categories, featuredImage } = Astro.props;

// Format dates
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  }).format(date);
};
---

<Layout title={`${title} | Central Dentist Blog`}>
  <!-- Blog Navigation Bar -->
  <section class="bg-white border-b border-gray-200 py-4">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between">
        <nav class="flex items-center space-x-6 overflow-x-auto">
          <a href="/blog" class="text-sm whitespace-nowrap hover:text-[#0099ba] transition-colors">
            All Posts
          </a>
          <a href="/blog/categories/pediatric" class="text-sm whitespace-nowrap hover:text-[#0099ba] transition-colors">
            Pediatric
          </a>
          <a href="/blog/categories/sleep" class="text-sm whitespace-nowrap hover:text-[#0099ba] transition-colors">
            Sleep
          </a>
          <a href="/blog/categories/adhd" class="text-sm whitespace-nowrap hover:text-[#0099ba] transition-colors">
            ADHD
          </a>
          <a href="/blog/categories/chronic-inflammation" class="text-sm whitespace-nowrap hover:text-[#0099ba] transition-colors">
            Chronic Inflammation
          </a>
          <a href="/blog/categories/mercury-amalgam" class="text-sm whitespace-nowrap hover:text-[#0099ba] transition-colors">
            Mercury Amalgam
          </a>
          <a href="/blog/categories/holistic" class="text-sm whitespace-nowrap hover:text-[#0099ba] transition-colors">
            Holistic
          </a>
          <a href="/blog/categories/nutrition" class="text-sm whitespace-nowrap hover:text-[#0099ba] transition-colors">
            Nutrition
          </a>
        </nav>
      </div>
    </div>
  </section>

  <!-- Blog Post Content -->
  <article class="py-12 md:py-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <BlurFade delay={100}>
        <!-- Post Header -->
        <header class="mb-8">
          <h1 class="text-section-header mb-6" style="color: #006786;">
            {title}
          </h1>

          <!-- Post Meta -->
          <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-4">
            <div class="flex items-center">
              <span style="color: #0099ba;" class="font-semibold">{author}</span>
            </div>
            <span>·</span>
            <time datetime={publishDate.toISOString()}>
              {formatDate(publishDate)}
            </time>
            <span>·</span>
            <span>{readTime} read</span>
          </div>

          {updatedDate && (
            <p class="text-sm text-gray-500 mb-4">
              Updated: {formatDate(updatedDate)}
            </p>
          )}

          <!-- Categories -->
          {categories.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-6">
              {categories.map((category) => (
                <a
                  href={`/blog/categories/${category.toLowerCase().replace(/\s+/g, '-').replace(/&/g, 'and')}`}
                  class="px-3 py-1 bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm rounded-full transition-colors"
                >
                  {category}
                </a>
              ))}
            </div>
          )}

          <!-- Featured Image -->
          {featuredImage && (
            <div class="mb-8">
              <img
                src={featuredImage}
                alt={title}
                class="w-full h-auto rounded-lg shadow-md"
                loading="eager"
              />
            </div>
          )}
        </header>
      </BlurFade>

      <!-- Post Content -->
      <BlurFade delay={200}>
        <div class="prose prose-lg max-w-none">
          <div class="text-body-regular blog-content">
            <slot />
          </div>
        </div>
      </BlurFade>

      <!-- Share Buttons -->
      <BlurFade delay={300}>
        <div class="mt-12 pt-8 border-t border-gray-200">
          <div class="flex items-center gap-4">
            <span class="text-sm font-semibold text-gray-700">Share:</span>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url.href}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 hover:text-[#0099ba] transition-colors"
              aria-label="Share on Facebook"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a
              href={`https://twitter.com/intent/tweet?url=${Astro.url.href}&text=${encodeURIComponent(title)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 hover:text-[#0099ba] transition-colors"
              aria-label="Share on X (Twitter)"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a
              href={`https://www.linkedin.com/shareArticle?mini=true&url=${Astro.url.href}&title=${encodeURIComponent(title)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 hover:text-[#0099ba] transition-colors"
              aria-label="Share on LinkedIn"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </BlurFade>
    </div>
  </article>

  <!-- CTA Section -->
  <section class="py-16 md:py-20" style="background: linear-gradient(to bottom right, #0099ba, #006786);">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-3xl mx-auto text-center">
        <BlurFade delay={100}>
          <h2 class="text-4xl md:text-5xl font-normal text-white mb-4"
              style="font-family: 'Playfair Display', serif;">
            Have Questions About Your Dental Health?
          </h2>
        </BlurFade>

        <BlurFade delay={200}>
          <p class="text-lg text-white/90 mb-8" style="font-family: 'Geist', sans-serif;">
            Our team is here to provide personalized guidance and holistic dental care solutions.
          </p>
        </BlurFade>

        <BlurFade delay={300}>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/contact"
              class="px-8 py-3 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-semibold hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg transition-all duration-300 inline-flex items-center justify-center"
              style="font-family: 'Playfair Display', serif;"
            >
              Schedule Consultation
            </a>
            <a
              href="tel:214-368-0900"
              class="px-8 py-3 bg-white border-2 rounded-full font-semibold transition-all duration-300 hover:shadow-lg inline-flex items-center justify-center"
              style="font-family: 'Playfair Display', serif; color: #0099ba; border-color: white;"
              onmouseover="this.style.backgroundColor='#006786'; this.style.color='white'; this.style.borderColor='#006786';"
              onmouseout="this.style.backgroundColor='white'; this.style.color='#0099ba'; this.style.borderColor='white';"
            >
              <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              (214) 368-0900
            </a>
          </div>
        </BlurFade>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Blog content styling */
  .blog-content :global(h2),
  .blog-content :global(h3),
  .blog-content :global(h4) {
    font-family: 'Playfair Display', serif;
    color: #006786;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .blog-content :global(h2) {
    font-size: 1.875rem;
    line-height: 2.25rem;
  }

  .blog-content :global(h3) {
    font-size: 1.5rem;
    line-height: 2rem;
  }

  .blog-content :global(h4) {
    font-size: 1.25rem;
    line-height: 1.75rem;
  }

  .blog-content :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.75;
  }

  .blog-content :global(a) {
    color: #0099ba;
    text-decoration: underline;
    transition: color 0.2s;
  }

  .blog-content :global(a:hover) {
    color: #006786;
  }

  .blog-content :global(blockquote) {
    border-left: 4px solid #a6b443;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #4b5563;
  }

  .blog-content :global(ul),
  .blog-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .blog-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .blog-content :global(img) {
    border-radius: 0.5rem;
    margin: 2rem 0;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .blog-content :global(figure) {
    margin: 2rem 0;
  }

  .blog-content :global(strong),
  .blog-content :global(b) {
    font-weight: 700;
    color: #2d3748;
  }

  .blog-content :global(em) {
    font-style: italic;
  }
</style>
