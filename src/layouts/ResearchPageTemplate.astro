---
import Layout from './Layout.astro';
import PageHero from '../components/shared/PageHero.astro';
import BlurFade from '../components/ui/BlurFade.astro';
import Card from '../components/ui/Card.astro';

export interface Props {
  title: string;
  metaTitle: string;
  description: string;
  heroSubtitle?: string;
  backgroundImage?: string;
}

const {
  title,
  metaTitle,
  description,
  heroSubtitle = "Evidence-based insights for optimal health",
  backgroundImage = "/images/services/abstract-white-texture.jpg"
} = Astro.props;
---

<Layout
  title={metaTitle}
  description={description}
>
  <PageHero
    title={title}
    subtitle={heroSubtitle}
    backgroundImage={backgroundImage}
    variant="standard"
    breadcrumbs={[
      { label: 'Clinical Research', href: '/clinical-research' },
      { label: title, href: '#' }
    ]}
  />

  <!-- Research Content Section -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-4xl mx-auto">
        <BlurFade delay={100}>
          <slot name="introduction" />
        </BlurFade>

        <BlurFade delay={200}>
          <slot name="main-content" />
        </BlurFade>
      </div>
    </div>
  </section>

  <!-- Studies Section (if provided) -->
  <slot name="studies-section" />

  <!-- Additional Content Section (if provided) -->
  <slot name="additional-content" />

  <!-- Related Research Section -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-4xl mx-auto">
        <BlurFade delay={100}>
          <h2 class="text-section-header text-header-primary text-center mb-4">
            Related Research
          </h2>
          <p class="text-section-subheader text-center mb-12">
            Explore more evidence-based insights
          </p>
        </BlurFade>

        <slot name="related-links" />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-20" style="background: linear-gradient(to bottom right, #0099ba, #006786);">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-3xl mx-auto text-center">
        <BlurFade delay={100}>
          <h2 class="text-section-header text-white mb-6">
            Ready to Apply This Research to Your Health?
          </h2>
          <p class="text-section-subheader text-white/90 mb-8">
            Schedule a consultation to discuss how these insights can benefit you
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/contact"
              class="px-8 py-3 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-semibold transition-all duration-300 hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg"
              style="font-family: 'Playfair Display', serif;">
              Schedule Consultation
            </a>
            <a
              href="tel:2143680900"
              class="px-8 py-3 bg-white border-2 rounded-full font-semibold transition-all duration-300 hover:shadow-lg"
              style="font-family: 'Playfair Display', serif; color: #0099ba; border-color: white;"
              onmouseover="this.style.backgroundColor='#006786'; this.style.color='white';"
              onmouseout="this.style.backgroundColor='white'; this.style.color='#0099ba';">
              Call (214) 368-0900
            </a>
          </div>
        </BlurFade>
      </div>
    </div>
  </section>
</Layout>