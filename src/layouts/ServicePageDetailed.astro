---
// Service Page Detailed Template - For complex service pages with multiple sections
import Layout from './Layout.astro';
import PageHero from '../components/shared/PageHero.astro';
import BlurFade from '../components/ui/BlurFade.astro';

export interface Props {
  title: string;
  subtitle?: string;
  description: string;
  metaDescription: string;
  backgroundImage?: string;
}

const {
  title,
  subtitle,
  description,
  metaDescription,
  backgroundImage = '/images/services/abstract-white-texture.jpg'
} = Astro.props;
---

<Layout
  title={`${title} | Central Dentist Dallas`}
  description={metaDescription}
  schemaType="MedicalBusiness"
>
  <!-- Hero Section with Consistent Styling -->
  <PageHero
    title={title}
    subtitle={subtitle || description}
    backgroundImage={backgroundImage}
    variant="standard"
    breadcrumbs={[
      { label: 'Services', href: '/services' },
      { label: title, href: '#' }
    ]}
  />

  <!-- Flexible Content Slot -->
  <slot />

  <!-- Default CTA Section - Can be overridden by slot="cta" -->
  <slot name="cta">
    <section class="py-16 md:py-20" style="background: linear-gradient(to bottom right, #0099ba, #006786);">
      <div class="container mx-auto px-4 md:px-6">
        <div class="max-w-3xl mx-auto text-center">
          <BlurFade delay={100} client:load>
            <h2 class="text-4xl md:text-5xl font-normal text-white mb-4"
                style="font-family: 'Playfair Display', serif;">
              Ready to Learn More?
            </h2>
          </BlurFade>

          <BlurFade delay={200} client:load>
            <p class="text-lg text-white/90 mb-8" style="font-family: 'Geist', sans-serif;">
              Experience our holistic approach to dental care
            </p>
          </BlurFade>

          <BlurFade delay={300} client:load>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="/contact"
                class="px-8 py-3 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-semibold transition-all duration-300 hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg inline-flex items-center justify-center"
                style="font-family: 'Playfair Display', serif;"
              >
                Schedule Consultation
              </a>
              <a
                href="tel:214-368-0900"
                class="px-8 py-3 bg-white border-2 rounded-full font-semibold transition-all duration-300 hover:shadow-lg inline-flex items-center justify-center"
                style="font-family: 'Playfair Display', serif; color: #0099ba; border-color: white;"
                onmouseover="this.style.backgroundColor='#006786'; this.style.color='white'; this.style.borderColor='#006786';"
                onmouseout="this.style.backgroundColor='white'; this.style.color='#0099ba'; this.style.borderColor='white';"
              >
                <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                (214) 368-0900
              </a>
            </div>
          </BlurFade>
        </div>
      </div>
    </section>
  </slot>
</Layout>

<style>
  /* Utility styles for detailed pages */
  :global(.service-card) {
    background-color: white;
    border-radius: 1rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    transition: all 300ms;
  }

  :global(.service-card:hover) {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  :global(.service-grid) {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    :global(.service-grid) {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (min-width: 1024px) {
    :global(.service-grid) {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  :global(.service-icon) {
    width: 4rem;
    height: 4rem;
    margin-bottom: 1rem;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  :global(.service-icon-green) {
    background: linear-gradient(to bottom right, #a6b443, #c7cd85);
  }

  :global(.service-icon-teal) {
    background: linear-gradient(to bottom right, #0099ba, #006786);
  }

  :global(.service-section) {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }

  @media (min-width: 768px) {
    :global(.service-section) {
      padding-top: 5rem;
      padding-bottom: 5rem;
    }
  }

  :global(.service-container) {
    max-width: 1280px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  @media (min-width: 768px) {
    :global(.service-container) {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  }

  :global(.service-content) {
    max-width: 56rem;
    margin-left: auto;
    margin-right: auto;
  }

  :global(.service-heading) {
    font-family: 'Playfair Display', serif;
    font-size: 1.875rem;
    font-weight: 400;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    :global(.service-heading) {
      font-size: 2.25rem;
    }
  }

  :global(.service-subheading) {
    font-family: 'Geist', sans-serif;
    font-size: 1.125rem;
    color: #4b5563;
    margin-bottom: 2rem;
  }

  :global(.service-text) {
    font-family: 'Geist', sans-serif;
    color: #4b5563;
    line-height: 1.75;
  }

  :global(.service-list) {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  :global(.service-list-item) {
    display: flex;
    align-items: flex-start;
  }

  :global(.service-checkmark) {
    width: 1.25rem;
    height: 1.25rem;
    margin-right: 0.75rem;
    margin-top: 0.125rem;
    color: #a6b443;
    flex-shrink: 0;
  }
</style>