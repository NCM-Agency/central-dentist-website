---
// Service Page Minimal Template - Superior design matching sleep-breathing
import Layout from './Layout.astro';
import PageHero from '../components/shared/PageHero.astro';
import BlurFade from '../components/ui/BlurFade.astro';

export interface Props {
  title: string;
  subtitle?: string;
  description: string;
  metaDescription: string;
  backgroundImage?: string;
  content: string;
  benefits: string[];
  ctaTitle?: string;
  ctaText?: string;
}

const {
  title,
  subtitle,
  description,
  metaDescription,
  backgroundImage = '/images/services/abstract-white-texture.jpg',
  content,
  benefits,
  ctaTitle = 'Ready to Get Started?',
  ctaText = 'Experience the benefits of our holistic approach'
} = Astro.props;
---

<Layout
  title={`${title} | Central Dentist Dallas`}
  description={metaDescription}
  schemaType="MedicalBusiness"
>
  <!-- Hero Section with Consistent Styling -->
  <PageHero
    title={title}
    subtitle={subtitle || description}
    backgroundImage={backgroundImage}
    variant="standard"
    breadcrumbs={[
      { label: 'Services', href: '/services' },
      { label: title, href: '#' }
    ]}
  />

  <!-- Main Content Section - White Background -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-3xl mx-auto">

        <!-- Content Block -->
        <BlurFade delay={100} client:visible>
          <div class="mb-12">
            <p class="text-lg leading-relaxed" style="color: #4b5563; font-family: 'Geist', sans-serif;">
              {content}
            </p>
          </div>
        </BlurFade>
      </div>
    </div>
  </section>

  <!-- Benefits Section - Gray Background -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-3xl mx-auto">
        <BlurFade delay={100} client:visible>
          <div class="bg-white rounded-2xl shadow-lg p-8 border border-gray-100">
            <!-- Icon with Teal Gradient (matching sleep-breathing) -->
            <div class="w-16 h-16 mx-auto mb-6 rounded-xl flex items-center justify-center"
                 style="background: linear-gradient(to bottom right, #0099ba, #006786);">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 11H7v2h2v-2zm4 0h-2v2h2v-2zm4 0h-2v2h2v-2zm2-7h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z"/>
              </svg>
            </div>

            <h3 class="text-2xl md:text-3xl font-normal text-center mb-6"
                style="font-family: 'Playfair Display', serif; color: #006786;">
              Patient Benefits
            </h3>

            <ul class="space-y-4">
              {benefits.map((benefit, index) => (
                <BlurFade delay={200 + (index * 50)} client:visible>
                  <li class="flex items-start">
                    <div class="w-6 h-6 rounded flex items-center justify-center mr-3 mt-0.5 flex-shrink-0"
                         style="background: linear-gradient(to bottom right, #a6b443, #c7cd85);">
                      <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <span style="color: #4b5563; font-family: 'Geist', sans-serif;">
                      {benefit}
                    </span>
                  </li>
                </BlurFade>
              ))}
            </ul>
          </div>
        </BlurFade>
      </div>
    </div>
  </section>

  <!-- CTA Section - Blue Gradient (Superior Design) -->
  <section class="py-16 md:py-20" style="background: linear-gradient(to bottom right, #0099ba, #006786);">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-3xl mx-auto text-center">
        <BlurFade delay={100} client:visible>
          <h2 class="text-4xl md:text-5xl font-normal text-white mb-4"
              style="font-family: 'Playfair Display', serif;">
            {ctaTitle}
          </h2>
        </BlurFade>

        <BlurFade delay={200} client:visible>
          <p class="text-lg text-white/90 mb-8" style="font-family: 'Geist', sans-serif;">
            {ctaText}
          </p>
        </BlurFade>

        <BlurFade delay={300} client:visible>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/contact"
              class="px-8 py-3 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-semibold transition-all duration-300 hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg inline-flex items-center justify-center"
              style="font-family: 'Playfair Display', serif;"
            >
              Schedule Consultation
            </a>
            <a
              href="tel:214-368-0900"
              class="px-8 py-3 bg-white border-2 rounded-full font-semibold transition-all duration-300 hover:shadow-lg inline-flex items-center justify-center"
              style="font-family: 'Playfair Display', serif; color: #0099ba; border-color: white;"
              onmouseover="this.style.backgroundColor='#006786'; this.style.color='white'; this.style.borderColor='#006786';"
              onmouseout="this.style.backgroundColor='white'; this.style.color='#0099ba'; this.style.borderColor='white';"
            >
              <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call (214) 368-0900
            </a>
          </div>
        </BlurFade>
      </div>
    </div>
  </section>
</Layout>