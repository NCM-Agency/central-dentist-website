---
// Team Member Template - Central Dentist
// Consistent with service page templates

import Layout from './Layout.astro';
import PageHero from '../components/shared/PageHero.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import BlurFade from '../components/ui/BlurFade.astro';

export interface Props {
  title: string;
  description: string;
  memberName: string;
  credentials?: string;
  role: string;
  breadcrumbs?: Array<{label: string; href: string;}>;
  imageUrl?: string;
  backgroundImage?: string;
  schemaType?: string;
}

const {
  title,
  description,
  memberName,
  credentials,
  role,
  breadcrumbs = [
    { label: 'About', href: '/about' },
    { label: memberName, href: '#' }
  ],
  imageUrl,
  backgroundImage = '/images/services/abstract-white-texture.jpg',
  schemaType = 'Person'
} = Astro.props;
---

<Layout title={title} description={description} schemaType={schemaType}>
  
  <!-- Hero Section - Consistent with service pages -->
  <PageHero
    title={memberName}
    subtitle={role}
    backgroundImage={backgroundImage}
    variant="standard"
    breadcrumbs={breadcrumbs}
  />

  <!-- Bio Section -->
  <section class="py-12 md:py-16 bg-white">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-6xl mx-auto">
        <BlurFade delay={0.2}>
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
            <!-- Photo and Quick Info -->
            <div class="lg:col-span-1">
              <div class="sticky top-8">
                {imageUrl ? (
                  <div class="aspect-square w-full max-w-sm mx-auto mb-6 rounded-2xl overflow-hidden shadow-lg">
                    <img 
                      src={imageUrl}
                      alt={memberName}
                      class="w-full h-full object-cover"
                      loading="lazy"
                    />
                  </div>
                ) : (
                  <div class="aspect-square w-full max-w-sm mx-auto mb-6 rounded-2xl overflow-hidden shadow-lg bg-gradient-to-br" style="background: linear-gradient(to bottom right, #0099ba, #a6b443);">
                    <div class="w-full h-full flex items-center justify-center text-white text-6xl font-bold" style="font-family: 'Playfair Display', serif;">
                      {memberName.split(' ').map(n => n[0]).join('')}
                    </div>
                  </div>
                )}
                
                {credentials && (
                  <div class="text-center mb-6">
                    <p class="font-body text-lg font-medium" style="color: #0099ba; font-family: 'Geist', sans-serif;">
                      {credentials}
                    </p>
                  </div>
                )}
                
                <!-- Quick Contact Card - Consistent with service pages -->
                <div class="bg-white rounded-xl p-6 shadow-lg text-center">
                  <h3 class="text-xl font-normal mb-4"
                      style="font-family: 'Playfair Display', serif; color: #006786;">
                    Schedule a Consultation
                  </h3>
                  <a 
                    href="/contact" 
                    class="block w-full mb-3 px-6 py-3 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-semibold hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg transition-all duration-300"
                    style="font-family: 'Playfair Display', serif;"
                  >
                    Book Appointment
                  </a>
                  <a
                    href="tel:214-368-0900"
                    class="block w-full px-6 py-3 bg-white border-2 rounded-full font-semibold transition-all duration-300 hover:shadow-lg"
                    style="font-family: 'Playfair Display', serif; color: #0099ba; border-color: #0099ba;"
                    onmouseover="this.style.backgroundColor='#006786'; this.style.color='white'; this.style.borderColor='#006786';"
                    onmouseout="this.style.backgroundColor='white'; this.style.color='#0099ba'; this.style.borderColor='#0099ba';"
                  >
                    Call (214) 368-0900
                  </a>
                </div>
              </div>
            </div>

            <!-- Biography and Details -->
            <div class="lg:col-span-2">
              <slot name="biography" />
              
              <!-- Education Section (optional) -->
              <slot name="education" />
              
              <!-- Specialties Section (optional) -->
              <slot name="specialties" />
              
              <!-- Philosophy Section (optional) -->
              <slot name="philosophy" />
              
              <!-- Additional Content -->
              <slot />
            </div>
          </div>
        </BlurFade>
      </div>
    </div>
  </section>

  <!-- Certifications/Memberships Section (optional) -->
  <slot name="certifications" />

  <!-- Services Section (optional) -->
  <slot name="services" />

  <!-- CTA Section - Consistent with service pages -->
  <slot name="cta">
    <section class="py-12 md:py-16" style="background: linear-gradient(to bottom right, #0099ba, #006786);">
      <div class="container mx-auto px-4 md:px-6 text-center">
        <h2 class="text-3xl md:text-4xl font-normal text-white mb-4"
            style="font-family: 'Playfair Display', serif;">
          Schedule a Consultation
        </h2>
        <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto" style="font-family: 'Geist', sans-serif;">
          Experience personalized care with our holistic approach to dental health.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contact" 
            class="px-8 py-3 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-semibold hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg transition-all duration-300 inline-flex items-center justify-center"
            style="font-family: 'Playfair Display', serif;"
          >
            Book Appointment
          </a>
          <a
            href="tel:214-368-0900"
            class="px-8 py-3 bg-white border-2 rounded-full font-semibold transition-all duration-300 hover:shadow-lg inline-flex items-center justify-center"
            style="font-family: 'Playfair Display', serif; color: #0099ba; border-color: white;"
            onmouseover="this.style.backgroundColor='#006786'; this.style.color='white'; this.style.borderColor='#006786';"
            onmouseout="this.style.backgroundColor='white'; this.style.color='#0099ba'; this.style.borderColor='white';"
          >
            <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call (214) 368-0900
          </a>
        </div>
      </div>
    </section>
  </slot>

</Layout>

<style>
  :global(.member-section) {
    padding: 3rem 1rem;
  }
  
  @media (min-width: 768px) {
    :global(.member-section) {
      padding: 4rem 2rem;
    }
  }

  :global(.credentials-list) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  :global(.credential-item) {
    background: white;
    padding: 1rem;
    border-radius: 0.5rem;
    border: 1px solid #e2e8f0;
    text-align: center;
    transition: all 300ms;
  }

  :global(.credential-item:hover) {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }

  :global(.services-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  :global(.bio-content) {
    font-size: 1.125rem;
    line-height: 1.75;
    color: #4a5568;
    font-family: 'Geist', sans-serif;
  }

  :global(.bio-content p) {
    margin-bottom: 1.5rem;
  }

  :global(.bio-content h3) {
    font-family: 'Playfair Display', serif;
    font-size: 1.75rem;
    font-weight: 400;
    color: #006786;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  :global(.certification-badge) {
    display: inline-block;
    background: linear-gradient(135deg, #a6b443 0%, #c7cd85 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    margin: 0.25rem;
    font-family: 'Geist', sans-serif;
  }
</style>