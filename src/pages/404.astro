---
// 404 Error Page - Friendly error page with navigation options
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
---

<Layout 
  title="Page Not Found"
  description="The page you're looking for couldn't be found. Get back on track with Central Dentist's holistic dental care."
  noindex={true}
>
  <section class="min-h-screen bg-gradient-to-br from-teal-50 via-white to-lime-50 py-16">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-2xl mx-auto">
        <!-- Error Code -->
        <div class="mb-8">
          <h1 class="text-8xl md:text-9xl font-heading font-bold text-teal-light mb-4">
            404
          </h1>
          <div class="w-24 h-1 bg-lime mx-auto mb-8"></div>
        </div>

        <!-- Error Message -->
        <div class="mb-12">
          <h2 class="text-2xl md:text-3xl font-heading font-semibold text-gray-dark mb-4">
            Oops! This Page Seems to Have Gone Missing
          </h2>
          <p class="text-lg text-gray-medium leading-relaxed max-w-md mx-auto">
            Don't worry - even the best navigation can take a wrong turn sometimes. 
            Let's get you back on track to optimal oral health!
          </p>
        </div>

        <!-- Navigation Options -->
        <div class="grid md:grid-cols-2 gap-6 mb-12 max-w-lg mx-auto">
          <Button 
            href="/" 
            variant="primary" 
            size="large"
            class="w-full"
          >
            Back to Homepage
          </Button>
          <Button 
            href="/contact" 
            variant="outline" 
            size="large"
            class="w-full"
          >
            Contact Us
          </Button>
        </div>

        <!-- Quick Links -->
        <div class="border-t border-gray-light pt-8">
          <h3 class="font-heading font-semibold text-gray-dark mb-6">
            Popular Pages
          </h3>
          <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4 text-sm">
            <a 
              href="/about" 
              class="text-teal hover:text-teal-dark transition-colors duration-200 font-medium"
            >
              About Our Practice
            </a>
            <a 
              href="/services/invisalign" 
              class="text-teal hover:text-teal-dark transition-colors duration-200 font-medium"
            >
              InvisalignÂ®
            </a>
            <a 
              href="/services/ozone-therapy" 
              class="text-teal hover:text-teal-dark transition-colors duration-200 font-medium"
            >
              Ozone Therapy
            </a>
            <a 
              href="/services/ceramic-implants" 
              class="text-teal hover:text-teal-dark transition-colors duration-200 font-medium"
            >
              Ceramic Implants
            </a>
            <a 
              href="/services/pediatric-healthy-start" 
              class="text-teal hover:text-teal-dark transition-colors duration-200 font-medium"
            >
              Pediatric Care
            </a>
            <a 
              href="/reviews-testimonials" 
              class="text-teal hover:text-teal-dark transition-colors duration-200 font-medium"
            >
              Patient Reviews
            </a>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="mt-12 p-6 bg-white rounded-xl shadow-soft border border-gray-light">
          <h4 class="font-heading font-semibold text-gray-dark mb-4">
            Need Immediate Assistance?
          </h4>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-6 text-sm">
            <a 
              href="tel:214-368-0900" 
              class="flex items-center gap-2 text-teal hover:text-teal-dark transition-colors duration-200 font-medium"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              (214) 368-0900
            </a>
            <a 
              href="mailto:info@centraldentist.com" 
              class="flex items-center gap-2 text-teal hover:text-teal-dark transition-colors duration-200 font-medium"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              info@centraldentist.com
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>