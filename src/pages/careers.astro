---
import Layout from '../layouts/Layout.astro';
import PageHero from '../components/shared/PageHero.astro';
import BlurFade from '../components/ui/BlurFade.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';

const positions = [
  {
    title: "Dental Hygienist",
    type: "Full-time",
    department: "Clinical",
    description: "Join our holistic dental practice as a Dental Hygienist committed to preventive care and patient education.",
    requirements: [
      "Current Texas dental hygiene license",
      "CPR certification",
      "Minimum 2 years clinical experience",
      "Interest in holistic/biological dentistry",
      "Excellent communication skills"
    ]
  },
  {
    title: "Dental Assistant",
    type: "Full-time",
    department: "Clinical",
    description: "We're seeking a skilled Dental Assistant to support our doctors in providing exceptional holistic dental care.",
    requirements: [
      "Dental Assistant certification preferred",
      "X-ray certification required",
      "Experience with digital dentistry",
      "Team-oriented mindset",
      "Passion for patient care"
    ]
  },
  {
    title: "Front Office Coordinator",
    type: "Full-time",
    department: "Administrative",
    description: "Be the first point of contact for our patients, managing scheduling, insurance verification, and patient relations.",
    requirements: [
      "2+ years dental office experience",
      "Knowledge of dental insurance",
      "Proficient in practice management software",
      "Outstanding customer service skills",
      "Bilingual (Spanish) a plus"
    ]
  }
];

const benefits = [
  "Competitive salary based on experience",
  "Health, dental, and vision insurance",
  "401(k) with company match",
  "Continuing education opportunities",
  "Paid time off and holidays",
  "Professional development support",
  "Positive, supportive work environment",
  "Focus on work-life balance"
];
---

<Layout title="Careers | Join Our Team at Central Dentist" description="Explore career opportunities at Central Dentist. Join our holistic dental practice in Dallas, TX.">
  <!-- Hero Section -->
  <PageHero
    title="Join Our Team"
    subtitle="Build Your Career in Holistic Dentistry"
    backgroundImage="/images/services/abstract-white-texture.jpg"
    variant="standard"
    breadcrumbs={[
      { label: 'Careers', href: '#' }
    ]}
  />

  <!-- Introduction Section -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-4xl mx-auto text-center">
        <BlurFade delay={100}>
          <h2 class="text-section-header text-header-primary mb-6">
            Make a Difference in Holistic Healthcare
          </h2>
          <p class="text-lg text-gray-600 mb-8">
            At Central Dentist, we're more than just a dental practice – we're a team dedicated to transforming lives through holistic, biological dentistry. We're looking for passionate healthcare professionals who share our commitment to treating the whole person, not just symptoms.
          </p>
          <p class="text-lg text-gray-600">
            If you're ready to join a practice that values innovation, compassion, and continuous learning, we want to hear from you.
          </p>
        </BlurFade>
      </div>
    </div>
  </section>

  <!-- Why Work With Us Section -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-6xl mx-auto">
        <BlurFade delay={100}>
          <div class="text-center mb-12">
            <h2 class="text-section-header text-header-primary">
              Why Work at Central Dentist?
            </h2>
          </div>
        </BlurFade>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          <BlurFade delay={200}>
            <Card variant="bordered" class="p-6 h-full">
              <div class="w-12 h-12 mb-4 rounded-full flex items-center justify-center" style="background-color: #0099ba;">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2" style="color: #2d3748;">Continuous Learning</h3>
              <p class="text-gray-600">
                Stay at the forefront of holistic dentistry with ongoing training and education opportunities.
              </p>
            </Card>
          </BlurFade>

          <BlurFade delay={300}>
            <Card variant="bordered" class="p-6 h-full">
              <div class="w-12 h-12 mb-4 rounded-full flex items-center justify-center" style="background-color: #0099ba;">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2" style="color: #2d3748;">Collaborative Team</h3>
              <p class="text-gray-600">
                Work alongside dedicated professionals who support each other and share a passion for patient care.
              </p>
            </Card>
          </BlurFade>

          <BlurFade delay={400}>
            <Card variant="bordered" class="p-6 h-full">
              <div class="w-12 h-12 mb-4 rounded-full flex items-center justify-center" style="background-color: #0099ba;">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2" style="color: #2d3748;">Patient Impact</h3>
              <p class="text-gray-600">
                Make a real difference in patients' lives through our holistic approach to oral and overall health.
              </p>
            </Card>
          </BlurFade>

          <BlurFade delay={500}>
            <Card variant="bordered" class="p-6 h-full">
              <div class="w-12 h-12 mb-4 rounded-full flex items-center justify-center" style="background-color: #0099ba;">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2" style="color: #2d3748;">Innovation</h3>
              <p class="text-gray-600">
                Work with cutting-edge technology and progressive treatment approaches in biological dentistry.
              </p>
            </Card>
          </BlurFade>

          <BlurFade delay={600}>
            <Card variant="bordered" class="p-6 h-full">
              <div class="w-12 h-12 mb-4 rounded-full flex items-center justify-center" style="background-color: #0099ba;">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2" style="color: #2d3748;">Work-Life Balance</h3>
              <p class="text-gray-600">
                We believe in supporting our team's well-being with flexible scheduling and a positive work environment.
              </p>
            </Card>
          </BlurFade>

          <BlurFade delay={700}>
            <Card variant="bordered" class="p-6 h-full">
              <div class="w-12 h-12 mb-4 rounded-full flex items-center justify-center" style="background-color: #0099ba;">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2" style="color: #2d3748;">Career Growth</h3>
              <p class="text-gray-600">
                Advance your career with mentorship, professional development, and growth opportunities.
              </p>
            </Card>
          </BlurFade>
        </div>

        <!-- Benefits List -->
        <BlurFade delay={800}>
          <Card variant="bordered" class="p-8">
            <h3 class="text-2xl font-semibold mb-6 text-center" style="font-family: 'Playfair Display', serif; color: #006786;">
              Our Benefits Package
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {benefits.map(benefit => (
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3 flex-shrink-0" style="color: #a6b443;" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">{benefit}</span>
                </div>
              ))}
            </div>
          </Card>
        </BlurFade>
      </div>
    </div>
  </section>

  <!-- Current Openings Section -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-6xl mx-auto">
        <BlurFade delay={100}>
          <div class="text-center mb-12">
            <h2 class="text-section-header text-header-primary">
              Current Openings
            </h2>
            <p class="text-section-subheader">
              Join our growing team of healthcare professionals
            </p>
          </div>
        </BlurFade>

        <div class="space-y-6">
          {positions.map((position, index) => (
            <BlurFade delay={200 + index * 100}>
              <Card variant="bordered" class="p-6 hover:shadow-lg transition-shadow duration-300">
                <div class="md:flex md:items-start md:justify-between">
                  <div class="flex-1">
                    <div class="flex items-center mb-2">
                      <h3 class="text-2xl font-semibold mr-4" style="color: #006786;">
                        {position.title}
                      </h3>
                      <span class="px-3 py-1 text-sm rounded-full bg-green-100 text-green-800">
                        {position.type}
                      </span>
                      <span class="ml-2 px-3 py-1 text-sm rounded-full bg-blue-100 text-blue-800">
                        {position.department}
                      </span>
                    </div>
                    <p class="text-gray-600 mb-4">{position.description}</p>
                    <div>
                      <h4 class="font-semibold text-gray-700 mb-2">Key Requirements:</h4>
                      <ul class="space-y-1">
                        {position.requirements.map(req => (
                          <li class="flex items-start">
                            <span class="text-green-500 mr-2">•</span>
                            <span class="text-gray-600 text-sm">{req}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                </div>
              </Card>
            </BlurFade>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Application Section -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-4xl mx-auto">
        <BlurFade delay={100}>
          <div class="text-center mb-12">
            <h2 class="text-section-header text-header-primary">
              Ready to Join Us?
            </h2>
            <p class="text-section-subheader">
              Submit your application and resume to start your journey with Central Dentist
            </p>
          </div>
        </BlurFade>

        <BlurFade delay={200}>
          <Card variant="bordered" class="p-8">
            <!-- Netlify Forms will automatically handle this form -->
            <form name="career-application" method="POST" data-netlify="true" netlify-honeypot="bot-field" enctype="multipart/form-data">
              <!-- Hidden field for Netlify Forms -->
              <input type="hidden" name="form-name" value="career-application" />
              <!-- Honeypot field for spam protection (hidden from users) -->
              <div class="hidden">
                <label>Don't fill this out if you're human: <input name="bot-field" /></label>
              </div>

              <div class="space-y-6">
                <!-- Name -->
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                    Full Name <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                  />
                </div>

                <!-- Email -->
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                    Email Address <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                  />
                </div>

                <!-- Phone -->
                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                    Phone Number <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                  />
                </div>

                <!-- Position -->
                <div>
                  <label for="position" class="block text-sm font-medium text-gray-700 mb-2">
                    Position Applying For <span class="text-red-500">*</span>
                  </label>
                  <select
                    id="position"
                    name="position"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                  >
                    <option value="">Select a position</option>
                    <option value="Dental Hygienist">Dental Hygienist</option>
                    <option value="Dental Assistant">Dental Assistant</option>
                    <option value="Front Office Coordinator">Front Office Coordinator</option>
                    <option value="Other">Other / General Application</option>
                  </select>
                </div>

                <!-- Resume Upload -->
                <div>
                  <label for="resume" class="block text-sm font-medium text-gray-700 mb-2">
                    Resume (PDF or Word) <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="file"
                    id="resume"
                    name="resume"
                    accept=".pdf,.doc,.docx"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                  />
                  <p class="mt-1 text-sm text-gray-500">Maximum file size: 5MB</p>
                </div>

                <!-- Cover Letter -->
                <div>
                  <label for="coverLetter" class="block text-sm font-medium text-gray-700 mb-2">
                    Cover Letter / Message
                  </label>
                  <textarea
                    id="coverLetter"
                    name="coverLetter"
                    rows="5"
                    placeholder="Tell us why you'd be a great fit for our team..."
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                  <button
                    type="submit"
                    class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-semibold hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg hover:scale-105 transition-all duration-300"
                  >
                    Submit Application
                    <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  </button>
                </div>
              </div>
            </form>

            <!-- Note about form submission -->
            <div class="mt-8 p-4 bg-blue-50 rounded-lg">
              <p class="text-sm text-blue-800">
                <strong>Note:</strong> You can also email your resume directly to <a href="mailto:careers@centraldentist.com" class="underline">careers@centraldentist.com</a> or drop it off at our office during business hours.
              </p>
            </div>
          </Card>
        </BlurFade>
      </div>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="py-16 md:py-20" style="background: linear-gradient(to bottom right, #0099ba, #006786);">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-3xl mx-auto text-center">
        <BlurFade delay={100}>
          <h2 class="text-section-header text-white mb-4">
            Questions About Careers?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Contact our HR team for more information about opportunities at Central Dentist
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button variant="secondary" href="mailto:careers@centraldentist.com">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Email Us
            </Button>
            <Button variant="secondary" href="tel:214-368-0900">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call (214) 368-0900
            </Button>
          </div>
        </BlurFade>
      </div>
    </div>
  </section>
</Layout>