        <div class="space-y-8">
          {studies.map((study, index) => (
            <BlurFade delay={200 + (index * 100)}>
              <Card className="p-6">
                <h3 class="text-card-header mb-3" style="color: #006786;">
                  {study.title}
                </h3>
                <div class="flex items-center gap-4 mb-4 text-sm text-gray-600">
                  <span>ðŸ“… {study.date}</span>
                  {study.sourceUrl ? (
                    <a
                      href={study.sourceUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="hover:underline"
                      style="color: #0099ba;"
                    >
                      ðŸ“š Source: {study.source}
                    </a>
                  ) : (
                    <span>ðŸ“š Source: {study.source}</span>
                  )}
                </div>
                <p class="text-body-regular">
                  {study.content}
                </p>
              </Card>
            </BlurFade>
          ))}
        </div>
      </div>
    </div>
  </section>

  <div slot="related-links">
    <div class="grid md:grid-cols-3 gap-6">
      <BlurFade delay={200}>
        <a href="/services/functional-health#tmj" class="block">
          <Card className="h-full hover:shadow-lg transition-shadow">
            <div class="p-6">
              <h3 class="text-card-header mb-3">TMJ Treatment</h3>
              <p class="text-body-regular">
                Learn about our approach to TMJ dysfunction and jaw pain.
              </p>
            </div>
          </Card>
        </a>
      </BlurFade>

      <BlurFade delay={300}>
        <a href="/services/invisalign" class="block">
          <Card className="h-full hover:shadow-lg transition-shadow">
            <div class="p-6">
              <h3 class="text-card-header mb-3">Invisalign</h3>
              <p class="text-body-regular">
                Clear aligner therapy to correct malocclusion.
              </p>
            </div>
          </Card>
        </a>
      </BlurFade>

      <BlurFade delay={400}>
        <a href="/clinical-research/growth-and-development" class="block">
          <Card className="h-full hover:shadow-lg transition-shadow">
            <div class="p-6">
              <h3 class="text-card-header mb-3">Growth & Development</h3>
              <p class="text-body-regular">
                Preventing malocclusion through early intervention.
              </p>
            </div>
          </Card>
        </a>
      </BlurFade>
    </div>
  </div>
</ResearchPageTemplate>