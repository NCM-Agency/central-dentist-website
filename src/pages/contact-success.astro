---
import Layout from '../layouts/Layout.astro';
import PageHero from '../components/shared/PageHero.astro';
import BlurFade from '../components/ui/BlurFade.astro';
import Button from '../components/ui/Button.astro';
---

<Layout title="Message Sent | Central Dentist" description="Thank you for contacting Central Dentist. We'll get back to you soon!">
  <!-- Hero Section -->
  <PageHero
    title="Thank You!"
    subtitle="Your message has been sent successfully"
    backgroundImage="/images/services/abstract-white-texture.jpg"
    variant="compact"
  />

  <!-- Success Message -->
  <section class="py-16 md:py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <BlurFade delay={100}>
          <div class="mb-8">
            <div class="w-20 h-20 mx-auto mb-6 bg-green-100 rounded-full flex items-center justify-center">
              <svg class="w-10 h-10 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>

            <h2 class="text-3xl font-semibold mb-4" style="font-family: 'Playfair Display', serif; color: #006786;">
              We've Received Your Message
            </h2>

            <p class="text-lg text-gray-600 mb-8">
              Thank you for contacting Central Dentist. One of our team members will get back to you
              within 24-48 hours during business days.
            </p>

            <div class="bg-gray-50 rounded-lg p-6 mb-8">
              <h3 class="font-semibold text-gray-700 mb-2">Office Hours:</h3>
              <p class="text-gray-600">
                Monday - Thursday: 8:00 AM - 5:00 PM<br>
                Friday: 8:00 AM - 3:00 PM<br>
                Saturday - Sunday: Closed
              </p>
            </div>

            <p class="text-gray-600 mb-8">
              For urgent matters, please call us directly at:
              <a href="tel:214-368-0900" class="block text-2xl font-semibold mt-2" style="color: #0099ba;">
                (214) 368-0900
              </a>
            </p>
          </div>
        </BlurFade>

        <BlurFade delay={200}>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button variant="primary" href="/">
              Return to Home
            </Button>
            <Button variant="secondary" href="/services">
              Explore Our Services
            </Button>
          </div>
        </BlurFade>
      </div>
    </div>
  </section>
</Layout>