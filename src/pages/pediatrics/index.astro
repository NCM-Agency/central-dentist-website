---
import Layout from '../../layouts/Layout.astro';
import PageHero from '../../components/shared/PageHero.astro';
import BlurFade from '../../components/ui/BlurFade.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';

const services = [
  {
    title: 'Healthy Startâ„¢ System',
    description: 'FDA-cleared treatment system for early orthodontic intervention and optimal airway development.',
    link: '/services/pediatric-healthy-start',
    icon: 'ðŸŒŸ'
  },
  {
    title: 'Sleep-Related Breathing Disorders',
    description: 'Addressing mouth breathing, snoring, and sleep issues that affect growth and development.',
    link: '/pediatrics/sleep-breathing',
    icon: 'ðŸ˜´'
  },
  {
