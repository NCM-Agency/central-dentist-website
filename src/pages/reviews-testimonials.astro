---
// Reviews & Testimonials Page - Central Dentist
import Layout from '../layouts/Layout.astro';
import PageHero from '../components/shared/PageHero.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import BlurFade from '../components/ui/BlurFade.astro';
---

<Layout
  title="Patient Reviews & Testimonials | Central Dentist Dallas"
  description="Real-life experiences from our patient families at Central Dentist in Dallas. Discover how holistic dentistry has transformed our patients' health and lives."
  schemaType="MedicalBusiness"
>

  <!-- Hero Section - Using PageHero component like other pages -->
  <PageHero
    title="Patient Reviews & Testimonials"
    subtitle="Real-life experiences as told by our patient families"
    backgroundImage="/images/services/abstract-white-texture.jpg"
    variant="service"
    breadcrumbs={[
      { label: 'Reviews', href: '/reviews-testimonials' }
    ]}
  />

  <!-- Video Testimonial Section -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <BlurFade delay={100}>
          <h2 class="text-3xl md:text-4xl font-normal text-center mb-4" style="font-family: 'Playfair Display', serif; color: #006786;">
            See What Our Patients Say
          </h2>
        </BlurFade>
        <BlurFade delay={200}>
          <p class="text-lg text-gray-600 text-center mb-12">
            Watch real patient testimonials about their transformative experiences
          </p>
        </BlurFade>

        <BlurFade delay={300}>
          <div class="aspect-w-16 aspect-h-9 rounded-xl overflow-hidden shadow-2xl">
            <iframe
              src="https://www.youtube.com/embed/BWv7yrbdB6w"
              title="Mom feedback on Super Health Treatment for Snoring & Speech Issues"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
              class="w-full h-full"
              style="aspect-ratio: 16/9; width: 100%; height: auto; min-height: 400px;"
              loading="lazy"
            ></iframe>
          </div>

          <div class="text-center mt-8">
            <p class="text-lg font-semibold text-gray-700 mb-2">
              "Mom feedback on Super Health Treatment for Snoring & Speech Issues"
            </p>
            <p class="text-base text-gray-600">
              See how our holistic approach helped this family achieve remarkable results
            </p>
          </div>
        </BlurFade>
      </div>
    </div>
  </section>

  <!-- Reviews Summary Section -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <BlurFade delay={100}>
          <h2 class="text-3xl md:text-4xl font-normal text-center mb-12" style="font-family: 'Playfair Display', serif; color: #006786;">
            Trusted by Hundreds of Families
          </h2>
        </BlurFade>

        <BlurFade delay={200}>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
          <!-- RateaBiz Summary -->
          <Card variant="bordered" class="p-8 text-center hover:shadow-lg transition-shadow">
            <div class="mb-4">
              <div class="text-5xl font-bold" style="color: #a6b443;">25+</div>
              <div class="flex justify-center my-3">
                {Array.from({ length: 5 }, (_, i) => (
                  <svg key={i} class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
