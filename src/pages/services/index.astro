---
import Layout from '../../layouts/Layout.astro';
import PageHero from '../../components/shared/PageHero.astro';
import BlurFade from '../../components/ui/BlurFade.astro';
import Card from '../../components/ui/Card.astro';
import servicesData from '../../content/services.json';

// Organize services by actual categories from data
const serviceCategories = [
  {
    id: 'restorative',
    title: 'Restorative & Repair',
    description: 'Rebuild and strengthen your smile naturally',
    icon: 'tooth',
    color: 'from-[#a6b443] to-[#8fa339]',
    services: servicesData.services.filter(s => s.category === 'Restorative')
  },
  {
    id: 'biological',
    title: 'Biological & Holistic',
    description: 'Natural treatments that support whole-body health',
    icon: 'leaf',
    color: 'from-teal to-teal-dark',
    services: servicesData.services.filter(s => s.category === 'Biological')
  },
  {
    id: 'airway',
    title: 'Sleep & Airway',
    description: 'Breathe better, sleep deeper, live healthier',
    icon: 'moon',
    color: 'from-teal-dark to-[#003d48]',
    services: servicesData.services.filter(s => s.category === 'Airway' || s.category === 'Pediatric')
  },
  {
    id: 'diagnostic',
    title: 'Advanced Diagnostics',
    description: 'Precise evaluation with cutting-edge technology',
    icon: 'scan',
    color: 'from-[#8fa339] to-[#a6b443]',
    services: servicesData.services.filter(s => s.category === 'Diagnostic' || s.category === 'Cosmetic' || s.category === 'Orthodontic')
  }
];

// Get featured services (highlighted ones)
const featuredServices = servicesData.services.filter(s => s.highlight).slice(0, 3);

// Trust statistics for social proof
const trustStats = [
  { number: '15+', label: 'Years of Excellence', icon: 'award' },
  { number: '5000+', label: 'Happy Patients', icon: 'smile' },
  { number: '100%', label: 'Mercury-Free', icon: 'leaf' },
  { number: '4.9â˜…', label: 'Patient Rating', icon: 'star' }
];
---

<Layout
  title="Our Services | Holistic Dental Care | Central Dentist"
  description="Comprehensive holistic dental services including mercury-free treatments, biocompatible materials, and natural healing approaches in Dallas."
>
  <!-- Hero Section -->
  <PageHero
    title="Our Services"
    subtitle="Holistic dental care that treats the root cause, not just symptoms"
    backgroundImage="/images/services/abstract-white-texture.jpg"
    variant="standard"
    breadcrumbs={[
      { label: 'Services', href: '#' }
    ]}
  />

  <!-- Trust Indicators Bar -->
  <section class="py-8 bg-gradient-to-r from-[#a6b443] to-[#c7cd85]">
    <div class="container mx-auto px-4 md:px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {trustStats.map((stat, index) => (
          <BlurFade delay={100 + (index * 50)}>
            <div class="text-center text-white">
              <div class="text-3xl md:text-4xl font-bold mb-1">{stat.number}</div>
              <div class="text-sm md:text-base opacity-90">{stat.label}</div>
            </div>
          </BlurFade>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Categories Overview - White Background -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4 md:px-6">
      <div class="text-center mb-12">
        <BlurFade delay={100}>
          <h2 class="text-section-header text-header-primary">
            How Can We Help You?
          </h2>
          <p class="text-section-subheader max-w-3xl mx-auto">
            Choose your path to better oral health. Our comprehensive services address
            every aspect of your dental wellness using safe, biocompatible approaches.
          </p>
        </BlurFade>
      </div>

      <!-- Category Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {serviceCategories.map((category, index) => (
          <BlurFade delay={200 + (index * 100)}>
            <Card variant="bordered" class="group hover:shadow-lg transition-all duration-300 hover:-translate-y-1 h-full">
              <div class="p-6 flex flex-col h-full">
                <!-- Icon -->
                <div
                  class={`w-16 h-16 mb-4 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform ${category.id !== 'biological' ? `bg-gradient-to-br ${category.color}` : ''}`}
                  style={category.id === 'biological' ? 'background: linear-gradient(to bottom right, #0099ba, #006786);' : ''}
                >
                  {category.icon === 'tooth' && (
                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C9.62 2 7.5 3.67 7.5 6.5c0 1.45-.5 3.55-1.5 5.5-1.02 2.08-1.5 4-1.5 5 0 1.5.5 3 2 3s2-1 2-3c0-1.08.42-2 1-2s1 .92 1 2c0 2 .5 3 2 3s2-1.5 2-3c0-1-0.48-2.92-1.5-5-1-1.95-1.5-4.05-1.5-5.5C16.5 3.67 14.38 2 12 2z"/>
                    </svg>
                  )}
                  {category.icon === 'leaf' && (
                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17,8C8,10 5.9,16.17 3.82,21.34L5.71,22L6.66,19.7C7.14,19.87 7.64,20 8,20C19,20 22,3 22,3C21,5 14,5.25 9,6.25C4,7.25 2,11.5 2,13.5C2,15.5 3.75,17.25 3.75,17.25C7,8 17,8 17,8Z"/>
                    </svg>
                  )}
                  {category.icon === 'moon' && (
                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
                    </svg>
                  )}
                  {category.icon === 'scan' && (
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                    </svg>
                  )}
                </div>

                <!-- Content -->
                <h3 class="text-card-header text-header-primary mb-2 group-hover:text-header-secondary transition-colors">
                  {category.title}
                </h3>
                <p class="text-body-regular text-gray-medium mb-4 flex-grow">
                  {category.description}
                </p>

                <!-- Service count -->
                <div class="text-body-small font-semibold" style="color: #0099ba;">
                  {category.services.length} {category.services.length === 1 ? 'Service' : 'Services'}
                </div>
              </div>
            </Card>
          </BlurFade>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Services - Gray Background -->
  <section class="py-16 md:py-20 bg-gray-50">
    <div class="container mx-auto px-4 md:px-6">
      <div class="text-center mb-12">
        <BlurFade delay={100}>
          <h2 class="text-section-header text-header-primary">
            Popular Treatments
          </h2>
          <p class="text-section-subheader">
            Our most requested services for optimal oral health
          </p>
        </BlurFade>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredServices.map((service, index) => {
          // Map service images and gradients
          const serviceConfig = {
            'ceramic-implants-prf': {
              image: '/images/services/leaf-vein-texture.jpg',
              solidColor: '#a6b443',
              gradientColors: 'rgba(166, 180, 67, 1), rgba(166, 180, 67, 0.95), rgba(166, 180, 67, 0.7), rgba(166, 180, 67, 0.3)'
            },
            'sleep-disordered-breathing': {
              image: '/images/services/cloud-texture.jpg',
              solidColor: '#0099ba',
              gradientColors: 'rgba(0, 153, 186, 1), rgba(0, 153, 186, 0.95), rgba(0, 153, 186, 0.7), rgba(0, 153, 186, 0.3)'
            },
            'pediatric-healthy-start': {
              image: '/images/services/leaf-simple-texture.jpg',
              solidColor: '#8fa339',
              gradientColors: 'rgba(143, 163, 57, 1), rgba(143, 163, 57, 0.95), rgba(143, 163, 57, 0.7), rgba(143, 163, 57, 0.3)'
            }
          };

          const config = serviceConfig[service.id] || {
            image: '/images/services/abstract-white-texture.jpg',
            solidColor: '#006786',
            gradientColors: 'rgba(0, 103, 134, 1), rgba(0, 103, 134, 0.95), rgba(0, 103, 134, 0.7), rgba(0, 103, 134, 0.3)'
          };

          return (
            <BlurFade delay={200 + (index * 100)}>
              <Card variant="bordered" class="group hover:shadow-xl transition-all duration-300 hover:-translate-y-2 overflow-hidden h-full">
                <!-- Natural texture with gradient overlay -->
                <div class="h-48 relative overflow-hidden" style={`background-color: ${config.solidColor};`}>
                  <!-- Background image -->
                  <div
                    class="absolute inset-0 bg-cover bg-center group-hover:scale-110 transition-transform duration-500"
                    style={`background-image: url('${config.image}'); background-size: cover; background-position: center right; opacity: 0.8;`}
                  ></div>
                  <!-- Gradient overlay -->
                  <div
                    class="absolute inset-0"
                    style={`background: linear-gradient(to right, ${config.gradientColors});`}
                  ></div>
                  <div class="absolute bottom-4 left-4 z-10">
                    <span class="inline-block px-3 py-1 bg-white/20 backdrop-blur text-white text-xs font-semibold rounded-full">
                      {service.category}
                    </span>
                  </div>
                </div>

                <!-- Content -->
                <div class="p-6">
                  <h3 class="text-card-header text-header-primary mb-3 group-hover:text-header-secondary transition-colors">
                    {service.title}
                  </h3>
                  <p class="text-body-regular text-gray-medium mb-4 line-clamp-2">
                    {service.description}
                  </p>

                  <!-- Features list -->
                  <ul class="space-y-2 mb-6">
                    {service.features?.slice(0, 3).map((feature) => (
                      <li class="flex items-start">
                        <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" style="color: #a6b443;" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-body-small text-gray-medium">{feature}</span>
                      </li>
                    ))}
                  </ul>

                  <!-- CTA -->
                  <a href={`/services/${service.slug}`}
                     class="inline-flex items-center justify-center w-full px-6 py-3 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-semibold hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg transition-all duration-300 group"
                     style="font-family: 'Playfair Display', serif;">
                    Learn More
                    <svg class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </a>
                </div>
              </Card>
            </BlurFade>
          );
        })}
      </div>
    </div>
  </section>

  <!-- All Services Grid - White Background -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4 md:px-6">
      <div class="text-center mb-12">
        <BlurFade delay={100}>
          <h2 class="text-section-header text-header-primary">
            Complete Service Directory
          </h2>
          <p class="text-section-subheader">
            Explore our full range of holistic dental solutions
          </p>
        </BlurFade>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {servicesData.services.map((service, index) => (
          <BlurFade delay={200 + (Math.min(index, 6) * 50)}>
            <a href={`/services/${service.slug}`}
               class="group flex items-start p-5 bg-white rounded-xl border border-gray-200 hover:border-teal hover:shadow-lg transition-all duration-300">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br rounded-lg flex items-center justify-center mr-4 group-hover:scale-110 transition-transform"
                   style="background: linear-gradient(135deg, #0099ba, #006786);">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C9.62 2 7.5 3.67 7.5 6.5c0 1.45-.5 3.55-1.5 5.5-1.02 2.08-1.5 4-1.5 5 0 1.5.5 3 2 3s2-1 2-3c0-1.08.42-2 1-2s1 .92 1 2c0 2 .5 3 2 3s2-1.5 2-3c0-1-0.48-2.92-1.5-5-1-1.95-1.5-4.05-1.5-5.5C16.5 3.67 14.38 2 12 2z"/>
                </svg>
              </div>
              <div class="flex-grow">
                <h3 class="text-body-regular font-semibold text-gray-dark group-hover:text-header-secondary transition-colors mb-1">
                  {service.title}
                </h3>
                <p class="text-body-small text-gray-medium line-clamp-2">
                  {service.shortDescription}
                </p>
              </div>
              <svg class="flex-shrink-0 w-5 h-5 text-gray-400 group-hover:text-teal group-hover:translate-x-1 transition-all mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </BlurFade>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section - Blue Gradient Background -->
  <section class="py-16 md:py-20" style="background: linear-gradient(to bottom right, #0099ba, #006786);">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-3xl mx-auto text-center">
        <BlurFade delay={100}>
          <h2 class="text-4xl md:text-5xl font-normal text-white mb-4"
              style="font-family: 'Playfair Display', serif;">
            Ready to Transform Your Smile?
          </h2>
          <p class="text-lg text-white/90 mb-8" style="font-family: 'Geist', sans-serif;">
            Experience the difference of mercury-free, biocompatible dentistry.
            Your journey to optimal oral health starts here.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/contact"
              class="px-8 py-3 bg-gradient-to-r from-[#a6b443] to-[#c7cd85] text-white rounded-full font-semibold transition-all duration-300 hover:from-[#8fa339] hover:to-[#a6b443] hover:shadow-lg inline-flex items-center justify-center"
              style="font-family: 'Playfair Display', serif;"
            >
              Schedule Your Consultation
            </a>
            <a
              href="tel:214-368-0900"
              class="px-8 py-3 bg-white border-2 rounded-full font-semibold transition-all duration-300 hover:shadow-lg inline-flex items-center justify-center"
              style="font-family: 'Playfair Display', serif; color: #0099ba; border-color: white;"
              onmouseover="this.style.backgroundColor='#006786'; this.style.color='white'; this.style.borderColor='#006786';"
              onmouseout="this.style.backgroundColor='white'; this.style.color='#0099ba'; this.style.borderColor='white';"
            >
              <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call (214) 368-0900
            </a>
          </div>
        </BlurFade>
      </div>
    </div>
  </section>
</Layout>